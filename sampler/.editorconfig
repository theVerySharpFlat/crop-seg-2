# EditorConfig is awesome: https://editorconfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.cpp]
indent_size = 2
indent_style = space

[*.cuh]
indent_size = 2
indent_style = space

[*.cu]
indent_size = 2
indent_style = space

[*.h]
indent_size = 2
indent_style = space
